<%= simple_form_for(@bed) do |f| %>
	<div class="row p-custom">
		<div class="col-md-3">
			<div class="form-group">
			  <%= f.input :total_ward_beds, label: 'Total Ward Beds *', input_html:{class: "form-control", :onkeypress => "return"} %>
			</div>
		</div>

		<div class="col-md-3">
			<div class="form-group">
			  <%= f.input :ward_beds_ramp_up, label: 'Ward Beds Ramp-Up *', input_html:{class: "form-control", :onkeypress => "return"} %>
			</div>
		</div>


		<div class="col-md-3">
			<div class="form-group">
        		<%= f.input :total_hdu_beds, label: 'Total HDU Beds *', input_html:{class: "form-control", :onkeypress => "return" }%>
			</div>
		</div>

		<div class="col-md-3">
			<div class="form-group">
			  <%= f.input :hdu_beds_ramp_up, label: 'HDU Beds Ramp-Up *', input_html:{class: "form-control", :onkeypress => "return"} %>
			</div>
		</div>

	</div>
	<div class="separator-breadcrumb border-top mb-3"></div>
	<div class="row p-custom">
	  <div class="col-md-2 offset-md-5">
	    <button type="submit" class="btn filter-btn col-md-12 mb-3">Save</button>
	  </div>
	</div>

<% end %>