<script type="text/javascript">
// << Mark as Patient >>
$('#mark_as_patient').on('click', function(){
  var change_confirm = confirm("Mark as zero patient?");
  if(change_confirm){
    $.ajax({
      url: "/lab_patients/mark_lab_as_zero_patient",
      type: "get",
      success: function(data) {
        if(data.error == '0'){
          toastr.success(data.message, {timeOut: "50000"});
        }else{
          toastr.error(data.message, {timeOut: "50000"});
        }
      }
    });
  }
});
  
</script>