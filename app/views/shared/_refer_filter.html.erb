<style type="text/css">
.inner
{
    display: inline-block;
}
</style>   
<div class="row p-custom">
 	  
	  <div class="col-md-2">
		<div class="form-group">
          <label>Patient CNIC</label><br>
          <input class="form-control" type="text" id="cnic" name="cnic" value='<%= (params[:cnic].present?)? "#{params[:cnic]}" : nil %>' />
      	</div>
	  </div>

	  <div class="col-md-2">
		<div class="form-group">
				<label> District:</label>
					<%= select_tag :district, options_for_select(all_districts,{:selected => params[:district_id]}), {class: 'form-control', :include_blank => "All"}%>
		</div>
	  </div>
	  <div class="col-md-2">
		<div class="form-group">
			<label> Tehsil:</label>
				<%= select_tag :tehsil, options_for_select(tehsil_information(params[:district_id]),{:selected => params[:tehsil_id]}), {class: 'form-control', :include_blank => "All"}%>
		</div>
	  </div>
	  <div class="col-md-2">
		<div class="form-group">
			<label> UCs:</label>
				<%= select_tag :uc, options_for_select(ucs_information(params[:tehsil_id]),{:selected => params[:uc_id]}), {class: 'form-control', :include_blank => "All"}%>
		</div>
	  </div>
</div>

<div class="row p-custom">
        
        <div class="col-md-2">
        </div>
        <div class="col-md-2">
        </div>
        <div class="col-md-2">
        </div>
        <div class="col-md-2">
        </div>
        <div class="col-md-2">
          <button class="btn filter-btn col-md-12 mb-3" onclick="filter_refer_patients()">Filter</button>
        </div>
        <div class="col-md-2">
          <button class="btn filter-btn col-md-12 mb-3" onclick="resetData()">Reset</button>
        </div>
  
</div>
      


