<%= simple_form_for(@department) do |f| %>
	<div class="row p-custom">
		<div class="col-md-6">
			<div class="form-group">
			  <%= f.input :department_name, input_html:{class: "form-control", :onkeypress => "return onlyAlphabets(event,this);" }%>
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
			  <%= f.input :department_type, collection: ["Allied","DCO"], prompt: "-- SELECT--", input_html:{class: "form-control"} %>
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
			  <%#= f.association :tags, label_method: :tag_name, input_html:{class: "form-control"}  %>
			  <%= f.association :tags, collection: tags_collections.map{ |tag| ["#{tag.tag_name} (#{tag.tag_category.try(:category_name)})", tag.id]}, input_html:{class: "form-control"} %>
			</div>
		</div>
	</div>
	<div class="separator-breadcrumb border-top mb-3"></div>
	<div class="row p-custom">
	  <div class="col-md-2 offset-md-5">
	    <button type="submit" class="btn filter-btn col-md-12 mb-3">Save</button>
	  </div>
	</div>

<% end %>

<script type="text/javascript">
    function onlyAlphabets(e, t) {
      try {
          if (window.event) {
              var charCode = window.event.keyCode;
          }
          else if (e) {
              var charCode = e.which;
          }
          else { return true; }
          if ((charCode > 64 && charCode < 91) || (charCode > 96 && charCode < 123) || charCode == 8 || charCode == 0 || charCode == 46 || charCode == 45 || charCode == 32)
              return true;
          else
              return false;
      }
      catch (err) {
          alert(err.Description);
      }
  }
</script>