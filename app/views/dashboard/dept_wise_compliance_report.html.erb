<style>
th {
  position: sticky;
  top: 0; /* Don't forget this, required for the stickiness */
}
</style>
<body class="text-left">
  <div class="app-admin-wrap layout-horizontal-bar clearfix">
    <div class="main-content-wrap  d-flex flex-column">
      <div class="main-content"> 

        <div class="row m-t-15">
          <div class="col-md-12">
            <div class="card ">
              <div class="card-body p-0">
                  <h5 class="card-title p-custom1">
                  Department Wise Compliance Report
                  <%= link_to 'Export to Excel', dept_wise_compliance_report_path(request.parameters.merge({:format => :xls})), :class => 'btn btn-success float-right filter-btn2', :title => "Export to Excel"%>
                  </h5>
                <div class="separator-breadcrumb border-top mb-3"></div>
                  <div class="listing-tbl-area">
                   <table id="p_table" class="table table-bordered table-hover listing-tbl">
                        <thead>
                          <tr>
                            <th>Sr. No</th>
                            <th>Category</th>
                            <th>Facility Type</th>
                            <th>Hospital</th>
                          </tr>
                         
                        </thead>
                        
                        <% @result.each_with_index do |r, i| %>
                         <tr>
                            <td class="text-center"><%= i + 1 %></td>
                            <td class="text-center"><%= r.category %></td>
                            <td class="text-center"><%= r.facility_type %></td>
                            <td class="text-center"><%= r.hospital_name %></td>
                         </tr>
                        <% end %>
                        
                    </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="text-center">
      <% if @result.present? %> 
              <%= will_paginate @result, :class => 'apple_pagination'  %>
              <div class="apple_pagination"><b style="font-weight: bold;">Total Records: </b><%= @result.total_entries %></div> 
             <% else %> 
               <div class="apple_pagination"><b style="font-weight: bold;">Total Records: </b> 0 </div> 
       <% end %>
    </div>
</body>