<style type="text/css">
    .checkbox input{
        position: relative;
        opacity: 1;
        width: auto;
        height: auto;
    }
    .btn-group, .btn-group-vertical,.multiselect {
        display: block;
        width: 100%;
    }
    ul.multiselect-container.dropdown-menu.show {
        height: 350px;
        overflow: auto;
    }
</style>
<h5 class="card-title p-custom1">
    Filters
</h5>

<div class="separator-breadcrumb border-top mb-3"></div>
<%= form_for case_response_evidence_path, method: :get do |f| %>
    <div class="row p-custom">

        <div class="col-md-2">
            <div class="form-group">
                <label>Department</label>
                <%= select_tag "department", options_for_select(departments_list, :selected => params[:department]), {class: 'form-control', :include_blank => "All", id: 'department'} %>
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                <label>Patient ID#</label>
                <input type="text" class="form-control" id="patient_id" name="patient_id" value="<%= params[:patient_id] %>">
            </div>
        </div>
        
        <div class="col-md-2">
            <div class="form-group">
                <label> PROVISIONAL DIAGNOSIS:</label>
                <%= select_tag :provisional_diagnosis, options_for_select(provisional_diagnosis_list,{:selected => params[:provisional_diagnosis]}), {class: 'form-control', :include_blank => "All"} %>
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group">
                <label>Date From</label>
                <input type="text" class="form-control date_from" name="from" value="<%= params[:from] %>">
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label>Date To</label>
                <input type="text" class="form-control date_to" name="to" value="<%= params[:to] %>">
            </div>
        </div>

        <div class="col-md-2">
            <button type="submit" class="btn filter-btn col-md-12 m-t-23">Filter</button>
        </div>

        <div class="col-md-2">
            <button type="button" class="btn  reset-btn col-md-12 m-t-23" onclick="resetData()">Reset</button>
        </div>
        <input type="hidden" value="1" name="search">

    </div>

<% end %>
<script type="text/javascript">
    function resetData(){
        window.location.href = "/case_response_evidence"
    }
</script>