<div class="row">
    <div class="col-md-12">
        <div class="card ">
            <div class="card-body p-0 m-t-10">
                <%= form_for legacy_data_reports_activities_path, method: :get do |f| %>
                    <div class="row p-custom">

                        <div class="col-md-2">
                            <div class="form-group">
                                <label>District</label>
                                <%= select_tag "district_id", options_for_select(all_districts, :selected => params[:district_id]), {class: 'form-control', :include_blank => "All", id: 'district_id'} %>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Department</label>
                                <%= select_tag "department_id", options_for_select(departments_list, :selected => params[:department_id]), {class: 'form-control', :include_blank => "All", id: 'department'} %>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Date From</label>
                                <%= date_field_tag :from , params[:from], class: 'form-control'  %>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Date To</label>
                                <%= date_field_tag :to , params[:to], class: 'form-control'  %>
                            </div>
                        </div>

                    </div>

                    <div class="row p-custom">
        
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn filter-btn col-md-12 m-t-23">Filter</button>
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn  reset-btn col-md-12 m-t-23" onclick="resetData()">Reset</button>
                        </div>
                      
                    </div>

               <% end %>
            </div>
        </div>
    </div>

</div>
<script type="text/javascript">
 function resetData(){
     $("#district_id").val("");
    $("#department").val("");
    $("#from").val("");
    $("#to").val("");
};

 </script>   