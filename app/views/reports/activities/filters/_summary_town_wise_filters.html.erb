<div class="row">
    <div class="col-md-12">
        <div class="card ">
            <div class="card-body p-0 m-t-10">

                    <div class="row p-custom">
                        <div class="col-md-2">
                          <div class="form-group">
                            <label>Date From</label>
                            <input type="text" class="form-control date_from" id="d_from" value='<%= (params[:d_from].present?)? "#{params[:d_from]}" : nil %>'>
                          </div>
                        </div>
                  
                        <div class="col-md-2">
                          <div class="form-group">
                            <label>Date To</label>
                            <input type="text" class="form-control date_to" id="d_to" value='<%= (params[:d_to].present?)? "#{params[:d_to]}" : nil %>'>
                          </div>
                        </div>

                        <div class="col-md-4">
                          <div class="form-group">
                            <label>Department Name</label>
                            <%= select_tag("department_name", options_for_select(all_departments,{:selected => params[:department]}), {class: 'form-control', :multiple => true}) %> 
                          </div>
                        </div>

                         <div class="col-md-4">
                          <div class="form-group">
                            <label>District</label>
                            <%= select_tag("district_name", options_for_select(all_districts, {:selected => params[:district]}), {class: 'form-control'}) %> 
                          </div>
                        </div>
                    </div>

                    <div class="row p-custom">
        
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn filter-btn col-md-12 m-t-23" onclick="filter_patients()">Filter</button>
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn  reset-btn col-md-12 m-t-23" onclick="resetData()">Reset</button>
                        </div>
                      
                    </div>
                    

              
            </div>
        </div>
    </div>

</div>
<script type="text/javascript">
    function filter_patients(){
  
      window.location = "?" + "department=" + $("#department_name").val() + "&d_from=" + $("#d_from").val() + "&d_to=" + $("#d_to").val()+ "&district=" + $("#district_name").val() + "&is_filtered=true";
    
};
function resetData(){
    // $("select").val("");
    $("select option:selected").prop("selected", false)
    $("input[type=text]").val("");
}
</script>