<table id="p_table" class="table table-bordered table-hover listing-tbl">
    <thead>
        <tr>
            <th>District</th>
            <th>Town</th>
            <th>Tag</th>
            <th>UC</th>
            <th>Name/Address</th>
            <th>Last Visited Date</th>
            <th>Activity Count</th>
        </tr>
    </thead>
    <tbody>
        <% @hotspots.each do |hotspot|%>
            <tr>
                <td><%= hotspot.district %></td>
                <td><%= hotspot.tehsil %></td>
                <td><%= hotspot.tag %></td>
                <td><%= hotspot.uc %></td>
                <td><%= hotspot.hotspot_name %>/<%= hotspot.address %></td>
                <td class="text-center"><%= hotspot.last_visited.try(:strftime, "%m/%d/%Y at %I:%M%p") %></td>
                <td class="text-center"><%= hotspot.activities.count %></td>
            </tr>
        <% end %>
    </tbody>
    
</table>