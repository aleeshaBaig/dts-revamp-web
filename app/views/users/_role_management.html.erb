<script type="text/javascript" src="/assets/forms/users.js"></script>
<%= simple_form_for(user, html: {}, wrapper_mappings: {}, remote: true) do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
	<div class="row">
		<%= render partial: "/users/roles/#{params[:role]}", locals: {f: f}%>
		<div class="separator-breadcrumb border-top mb-3"></div>
	</div>
  <div class="row p-custom">
    <div class="col-md-2 offset-md-5">
      <button type="submit" class="btn filter-btn col-md-12 mb-3">Save</button>
    </div>
    <div class="col-md-2 mt-3">
    	<button type="cancel" class="btn btn-danger col-md-12 mb-3 mt-1" onClick="window.location='/users'">Cancel</button>
    </div>
  </div>
<% end %>