<script type="text/javascript" src="/assets/forms/users.js"></script>
<%= simple_form_for(user, html: {}, wrapper_mappings: {}, remote: true) do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
    <div class="modal-body">
        <div class="form-group">
            <%= f.input :password, input_html:{class: "form-control", required: true}%>
        </div>
        <div class="form-group">
            <%= f.input :password_confirmation, input_html:{class: "form-control", required: true}%>
        </div>
    </div>
    <input type="hidden" name="is_forgot" value="true">
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Update</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
<% end %>